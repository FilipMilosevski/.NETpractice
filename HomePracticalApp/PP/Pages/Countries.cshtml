@page
@using Filip;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Project1Empty.Pages.CountriesModel



<div class="row">

	<h1 class="display-2">Countries</h1>
	<table class="table">
		<thead class="thead-inverse">
			<tr>
				<th>ID</th>
				<th>NAME</th>
				<th>COUNTRY CODE</th>

			</tr>
		</thead>
		<tbody>
			@if (Model.Countries is not null)
			{
				@foreach (Country country in Model.Countries)
				{
					<tr>
						<td>@country.CountryId</td>
						<td>@country.Name</td>
						<td>@country.CountryCode2</td>

					</tr>

				}
			}
		</tbody>
	</table>


</div>

<div class="row">
	<p>Enter details for a new supplier:</p>
	<form method="POST">
		<div>
			<input asp-for="Country.Name" placeholder="Name" />
		</div>
		<div>
			<input asp-for="Country.CountryCode2" placeholder="Code" />
		</div>
		<div>
			<input asp-for="Country.CountryId" placeholder="Id" />
		</div>



		<input type="submit" />
	</form>
</div>